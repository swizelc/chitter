
<link rel="stylesheet" type="text/css" href="/css/message_board.css">
<head>
    <h1>~ Search results ~</h1>
</head>

<body>
 <a id="back" href='/chitter_board'>Back to Peeps</a> <br><br>
 <ul style="list-style: none;">
    <%@results.reverse.each do |peep|%>
        <li class='peep'>
            <%=peep.message%> <br>
            <%if @user.id == peep.user_id%>
                <form action="/peeps/<%=peep.id%>"method="post">
                    <input type='hidden' name='_method'value='DELETE'>
                    <input type="submit" id='delete' value="x">
                </form>
            <%end%>
        <p id='date'><%=peep.date%>
            <input type="submit" id='like' name='like' value="^">
        </p>
        </li>
        <br>
    <%end%>
 </ul>

</body>